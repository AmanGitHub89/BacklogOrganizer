<UserControl x:Class="BacklogOrganizer.UserControls.TextInputControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:userControls="clr-namespace:BacklogOrganizer.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="800">
    <Grid>
        <DockPanel LastChildFill="True" Margin="0,0,0,0">
            <userControls:ThreeDButton x:Name="EditButton" Margin="5,0,0,0" VerticalAlignment="Center" ToolTip="Edit">
                <Image Source="../Resources/EditIcon.png" Margin="2"></Image>
            </userControls:ThreeDButton>
            <userControls:ThreeDButton x:Name="DoneButton" Margin="5,0,5,0" VerticalAlignment="Center" ToolTip="Edit">
                <Image Source="../Resources/ToggleIcon.png" Margin="2"></Image>
            </userControls:ThreeDButton>
            <TextBox Name="InputTextBox" Height="30" GotFocus="InputTextBox_OnGotFocus" VerticalContentAlignment="Center" Margin="0,0,0,0" HorizontalAlignment="Stretch"></TextBox>
        </DockPanel>
    </Grid>
</UserControl>
